<% if product = Product.find_by(id: product_id)
  item_total = product.price * details.quantity
  @order_total += item_total
%>

  <tr>
    <td>
      <img src="<%=product.image.tiny %>">
    </td>
    <td>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
        <%= details.quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>